# FretPilot Environment Variables
# Copy this file to .env and fill in your actual keys

# =====================================
# DROPSHIPPING PLATFORM API KEYS
# =====================================

# Spocket - Musical Instruments & Accessories Dropshipping
# Get your API key: https://www.spocket.co/integrations/api
VITE_SPOCKET_API_KEY=your_spocket_api_key_here

# Printful - Print-on-Demand Merchandise (T-Shirts, Mugs, etc.)
# Get your API key: https://www.printful.com/dashboard/store
VITE_PRINTFUL_API_KEY=your_printful_api_key_here

# Modalyst - Optional Fashion/Lifestyle Dropshipping
# Get your API key: https://modalyst.co/
VITE_MODALYST_API_KEY=your_modalyst_api_key_here

# =====================================
# PAYMENT PROCESSING
# =====================================

# Stripe - Credit Card Payments
# Get your keys: https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal - PayPal Payments (if using)
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id

# =====================================
# BITCOIN PAYMENTS (Optional)
# =====================================

# Bitcoin Payment Gateway
VITE_BITCOIN_API_KEY=your_bitcoin_api_key
VITE_BITCOIN_WALLET_ADDRESS=your_bitcoin_wallet_address

# =====================================
# EMAIL SERVICE
# =====================================

# SendGrid for Order Confirmation Emails
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=support@fretpilot.com

# =====================================
# DATABASE & BACKEND (if using)
# =====================================

# MongoDB or PostgreSQL connection
DATABASE_URL=your_database_connection_string

# Backend API URL
VITE_API_BASE_URL=http://localhost:3000

# =====================================
# ANALYTICS & TRACKING
# =====================================

# Google Analytics
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Facebook Pixel (for ads)
VITE_FB_PIXEL_ID=your_facebook_pixel_id

# =====================================
# AI & MUSIC SERVICES
# =====================================

# OpenAI API for AI Lessons
VITE_OPENAI_API_KEY=your_openai_api_key

# Spotify API (for music features)
VITE_SPOTIFY_CLIENT_ID=your_spotify_client_id
VITE_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# =====================================
# PRODUCTION SETTINGS
# =====================================

NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_APP_NAME=FretPilot

# Production Domain
VITE_PRODUCTION_URL=https://fretpilotstudio.com
