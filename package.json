{
  "name": "fretpilot",
  "version": "0.1.0",
  "description": "Interactive guitar chord trainer for learning and practice",
  "author": "FretPilot",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "ios": "npm run build && npx cap sync && npx cap open ios",
    "android": "npm run build && npx cap sync && npx cap open android",
    "electron": "npm run build && npx cap sync && npx cap open electron",
    "electron:build": "npm run build && electron-builder --win --publish never",
    "server": "node server/index.js"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.0",
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.5.0",
    "@capacitor/ios": "^5.5.0",
    "@capacitor/splash-screen": "^5.0.6",
  "@capacitor-community/admob": "^5.3.0",
  "express": "^4.19.2",
    "cors": "^2.8.5",
    "stripe": "^16.0.0",
    "html2canvas": "^1.4.1",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.5.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "capacitor-resources": "^2.0.5",
    "electron": "^25.8.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.3.0"
  },
  "build": {
    "appId": "com.fretpilot.app",
    "productName": "FretPilot",
    "directories": {
      "buildResources": "resources",
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "electron-app/main.js",
      "electron-app/package.json"
    ],
    
    "forceCodeSigning": false,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "signAndEditExecutable": false
    }
  }
}
